{
	"multipart": [
		{
			"apply": {
				"model": "$MOD:block/$BLOCK_post"
			}
		},
		{
			"when": {
				"north": "true"
			},
			"apply": {
				"model": "$MOD:block/$BLOCK_side",
				"uvlock": true
			}
		},
		{
			"when": {
				"east": "true"
			},
			"apply": {
				"model": "$MOD:block/$BLOCK_side",
				"y": 90,
				"uvlock": true
			}
		},
		{
			"when": {
				"south": "true"
			},
			"apply": {
			"model": "$MOD:block/$BLOCK_side",
				"y": 180,
				"uvlock": true
			}
		},
		{
			"when": {
				"west": "true"
			},
			"apply": {
			"model": "$MOD:block/$BLOCK_side",
				"y": 270,
				"uvlock": true
			}
		}
	]
}